<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/drawArea"
    tools:context="kenneth.com.refardenapp.MainActivity">

    <TextView
        android:id="@+id/homeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:text="Welcome to Refarden"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="37dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/homeMsg"
        android:layout_below="@+id/homeMsg"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_action_menu" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/container1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignStart="@+id/homeMsg"
        android:layout_below="@+id/menuButton"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/translucent_containers">


    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/container2"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignStart="@+id/homeMsg"
        android:layout_below="@+id/menuButton"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/translucent_containers">


    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/container3"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignStart="@+id/homeMsg"
        android:layout_below="@+id/menuButton"
        android:layout_marginStart="330dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/translucent_containers">


    </android.support.v7.widget.LinearLayoutCompat>


</RelativeLayout>
