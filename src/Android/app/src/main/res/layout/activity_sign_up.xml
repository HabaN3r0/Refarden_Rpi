<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="kenneth.com.refardenapp.SignUpActivity">

    <Button
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/menuButton"
        android:layout_above="@+id/description"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ic_action_back" />

    <TextView
        android:id="@+id/createAccMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="48dp"
        android:text="Create an Account"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/createAccMsg"
        android:layout_below="@+id/createAccMsg"
        android:layout_marginTop="16dp"
        android:text="Enter the email address to create your account"
        android:textColor="@color/white" />

    <!--Removed this cause it might be too cluttered-->
    <!--<Button-->
        <!--android:id="@+id/menuButton"-->
        <!--android:layout_width="37dp"-->
        <!--android:layout_height="42dp"-->
        <!--android:layout_alignStart="@+id/description"-->
        <!--android:layout_below="@+id/description"-->
        <!--android:layout_marginStart="-5dp"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:background="@drawable/ic_action_menu" />-->

    
    <android.support.design.widget.TextInputLayout
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description"
        android:layout_below="@+id/description"
        android:layout_marginTop="50dp"
        android:theme="@style/TextInputLayoutAppearance"
        app:errorEnabled="true">
        
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            app:backgroundTint="@color/white"/>
        
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description"
        android:layout_below="@+id/emailInput"
        android:theme="@style/TextInputLayoutAppearance"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/white"
            android:inputType="textPassword"
            app:backgroundTint="@color/white"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/confirmPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description"
        android:layout_below="@+id/passwordInput"
        android:theme="@style/TextInputLayoutAppearance"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/white"
            android:inputType="textPassword"
            app:backgroundTint="@color/white"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/createAccMsg"
        android:layout_below="@id/confirmPasswordInput"
        android:layout_marginStart="70dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:onClick="confirmInput"/>

</RelativeLayout>
